<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_vehiclestart"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
android:background="@color/icons"
    tools:context="com.gul.smartroute.vehiclestart"
    android:orientation="vertical"
    android:weightSum="1">



    <include layout="@layout/app_bar"
        android:id="@+id/app_bar"
        />

   <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="430dp"
    android:elevation="8dp"
       android:background="@color/icons"
       android:orientation="vertical"
       android:id="@+id/linearLayout"

       android:gravity="center"


       android:layout_centerVertical="true"
       android:layout_alignParentLeft="true">





       <EditText
           android:id="@+id/etEmail"
           android:layout_width="match_parent"
           android:layout_height="40dp"

           android:layout_below="@+id/textView2"
           android:layout_marginTop="15dp"

           android:drawableLeft="@drawable/vehicle"
           android:textColor="@color/primary_text"
           android:textColorHint="@color/primary_text"
           android:drawablePadding="10dp"
           android:hint=" Vehicle Registration Number"
           android:inputType="textPersonName"
           android:maxLines="1"

            />

       <TextView
           android:id="@+id/textView"
           android:layout_width="255dp"
           android:layout_height="wrap_content"
           android:layout_alignParentLeft="true"
           android:layout_alignParentStart="true"
           android:layout_below="@+id/etEmail"
           android:layout_marginTop="15dp"

           android:layout_weight="0.00"
           android:gravity="right"
           android:text="Kindly Select Your Department"
           android:textColor="@color/primary_text" />


       <Spinner

           android:id="@+id/spinner"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_below="@+id/textView"
           android:layout_centerHorizontal="true"

           android:layout_marginTop="15dp"
           android:dropDownSelector="@color/primary_text"
           android:dropDownWidth="match_parent"
           android:elevation="4dp"
           android:fadingEdge="horizontal|vertical"
           android:focusable="true"
           android:focusableInTouchMode="true"
           android:gravity="center"


           android:popupBackground="@color/common_google_signin_btn_text_dark_disabled"
           android:textSize="20sp"
           android:visibility="visible" />

       <Button
           android:id="@+id/press"


           android:layout_width="match_parent"
           android:layout_height="45dp"
           android:layout_marginTop="80dp"


           android:background="@drawable/buttonshape"
           android:foregroundGravity="center"
           android:gravity="center"
           android:onClick="onclick (vehiclestart)"
           android:text="Done"
           android:textColor="#000000"
           android:textSize="30sp"
           android:visibility="visible" />


   </LinearLayout>


</RelativeLayout>
