<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_about"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.gul.smartroute.About">

    <include
        android:id="@+id/app_bar"
        layout="@layout/app_bar" />


    <TextView

        android:layout_marginRight="25dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/app_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="About Us"
        android:layout_marginBottom="10dp"

        android:textSize="25sp"
        android:id="@+id/heading"
        android:layout_marginLeft="5dp"
        />

    <TextView

        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/heading"
         android:inputType="textMultiLine"
       android:text="@string/textlong"
        android:scrollbars="vertical"
    android:textSize="18sp"
        android:id="@+id/txt"/>

    <TextView
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Project Superviser : Dr. Maria Anjum"

        android:textSize="20sp"
        android:id="@+id/botm"/>

    <TextView
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/botm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Project Group : SteadFast"
        android:layout_marginRight="10dp"

        android:textSize="20sp"
        android:id="@+id/botm3"/>

    <TextView
        android:layout_marginRight="10dp"

        android:layout_marginLeft="10dp"
        android:layout_below="@+id/botm3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="University : LCWU"

        android:textSize="20sp"
        android:id="@+id/botm4"/>
    <ImageView
        android:layout_marginBottom="25dp"
        android:layout_marginLeft="250dp"
        android:layout_below="@id/botm4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/link"/>

</RelativeLayout>
